from flask import Flask, jsonify

app = Flask(__name__)

@app.route('/')
def home():
    return "Welcome to Prashanth's Flask App!"

@app.route('/api/greet/<name>')
def greet(name):
    return jsonify({'message': f'Hello, {name}! This is your custom greeting.'})

if __name__ == '__main__':
    app.run(debug=True)